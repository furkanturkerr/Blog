@model Entities.Concrate.ExperiencePage

@{
    ViewData["Title"] = "Özgeçmiş Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mt-4 mb-4" style="margin-left: 12rem">Özgeçmiş Ekle</h2>

<div class="container">
    <form method="post" class="mb-4 p-3 border rounded bg-white shadow-sm">

        <div class="mb-3">
            <label class="form-label fw-bold">Başlık</label>
            <input type="text" asp-for="ExperiencePageContent" class="form-control" />
        </div>
        
        <div class="mb-3">
            <label class="form-label fw-bold">Alt Başlık</label>
            <input type="text" asp-for="ExperiencePageContentlow" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Tarih</label>
            <input type="text" asp-for="ExperiencePageTime" class="form-control" />
        </div>
        
        <div class="mb-3">
            <label class="form-label fw-bold">Açıklama</label>
            <input type="text" asp-for="ExperiencePageText" class="form-control" />
        </div>
        
        <button type="submit" class="btn btn-success">Kaydet</button>
    </form>
</div>