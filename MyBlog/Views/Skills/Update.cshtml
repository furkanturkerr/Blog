@model Entities.Concrate.Skills

@{
    Layout = "~/Views/Admin/Index.cshtml";
    ViewData["Title"] = "Özgeçmiş";
}

<div class="page-header">
    <div class="page-block">
        <div class="page-header-title">
            <h5 class="mb-0 font-medium">Özgeçmiş</h5>
        </div>
        <ul class="breadcrumb">
            <li class="breadcrumb-item" aria-current="page">Yeteneklerim</li>
            <li class="breadcrumb-item" aria-current="page">Yetenek Güncelleme</li>
        </ul>
    </div>
</div>

<form method="post" class="form-control">
    <input type="hidden" asp-for="SkillsId"/>
    <label>Yetenek Adı</label>
    <input type="text" asp-for="SkillsContent" value="@Model.SkillsContent" class="form-control"/>
    @Html.ValidationMessageFor(x=> x.SkillsContent)
    <br/>
    <label>Yüzde</label>
    <input type="text" asp-for="SkillsNumber" value="@Model.SkillsNumber" class="form-control"/>
    @Html.ValidationMessageFor(x=> x.SkillsNumber)
    <br/>
    <button class="btn btn-outline-dark">Güncelle</button>
</form>