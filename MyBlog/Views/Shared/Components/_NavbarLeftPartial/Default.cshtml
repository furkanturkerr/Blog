@model System.Collections.Generic.List<Entities.Concrate.NavbarLeft>

<aside class="sidebar " data-sidebar>
    @foreach(var item in Model)
    {
        <div class="sidebar-info">
            <figure class="avatar-box">
                <img src="/@item.NavbarLeftImage" alt="avatar" width="80">
            </figure>

            <div class="info-content">
                <h1 class="name" title="Richard Hanrick">@item.NavbarLefName</h1>
                <p class="title">@item.NavbarLeftText</p>
            </div>

            <button class="info-more-btn" data-sidebar-btn>
                <span>Bilgiler</span>
                <ion-icon name="chevron-down"></ion-icon>
            </button>
        </div>
        
         <div class="sidebar-info-more">
        <div class="separator"></div>

        <ul class="contacts-list">
            <li class="contact-item">
                <div class="icon-box">
                    <ion-icon name="mail-outline"></ion-icon>
                </div>

                <div class="contact-info">
                    <p class="contact-title">E-mail</p>

                    <a href="mailto:@item.NavbarLeftEmail" class="contact-link">@item.NavbarLeftEmail</a>
                </div>
            </li>

            <li class="contact-item">
                <div class="icon-box">
                    <ion-icon name="phone-portrait-outline"></ion-icon>
                </div>

                <div class="contact-info">
                    <p class="contact-title">Telefon</p>

                    <a href="tel:@item.NavbarLeftPhone" class="contact-link">@item.NavbarLeftPhone</a>
                </div>
            </li>

            <li class="contact-item">
                <div class="icon-box">
                    <ion-icon name="calendar-outline"></ion-icon>
                </div>

                <div class="contact-info">
                    <p class="contact-title">Doğum Günüm</p>

                    <time datetime="1982-06-23">Ekim 3, 2005</time>
                </div>
            </li>

            <li class="contact-item">
                <div class="icon-box">
                    <ion-icon name="location-outline"></ion-icon>
                </div>

                <div class="contact-info">
                    <p class="contact-title">Konum</p>

                    <address>@item.NavbarLeftAddress</address>
                </div>
            </li>
        </ul>

        <div class="separator"></div>

        <ul class="social-list">
            <li class="social-item"><a href="@item.NavbarLeftLinkLinkedin" target="_blank" class="social-link"><ion-icon name="logo-linkedin"></ion-icon></a></li>
            <li class="social-item"><a href="@item.NavbarLeftLinkGithub" target="_blank" class="social-link"><ion-icon name="logo-github"></ion-icon></a></li>
            <li class="social-item"><a href="@item.NavbarLeftLinkInstagram" target="_blank" class="social-link"><ion-icon name="logo-instagram"></ion-icon></a></li>
        </ul>
    </div>
    }
</aside>


   