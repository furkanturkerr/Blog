@model Entities.Concrate.Contact
@{
    ViewData["Title"] = "İletişim";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="page-header">
    <div class="page-block">
        <div class="page-header-title">
            <h5 class="mb-0 font-medium">İletişim</h5>
        </div>
        <ul class="breadcrumb">
            <li class="breadcrumb-item">Mesajlar</li>
            <li class="breadcrumb-item active">Mesaj Detayı</li>
        </ul>
    </div>
</div>

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-lg-8 mx-auto">

            <div class="card shadow-sm">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <a href="/ContactMail/UnRead"
                       class="btn btn-outline-secondary">
                        ← Mesajlara Dön
                    </a>
                    <span class="p-4 text-muted">@Model.CreatedDate.ToString("dd MMM yyyy, HH:mm")</span>
                </div>

                <div class="card-body">

                    <div class="mb-3">
                        <label class="form-label fw-semibold">İsim Soyisim</label>
                        <input type="text"
                               class="form-control"
                               value="@Model.Name"
                               readonly />
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">E-Mail</label>
                        <input type="email"
                               class="form-control"
                               value="@Model.Email"
                               readonly />
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Konu</label>
                        <input type="text"
                               class="form-control"
                               value="@Model.Subject"
                               readonly />
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-semibold">Mesaj</label>
                        <textarea class="form-control"
                                  rows="6"
                                  readonly>@Model.Message</textarea>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a href="~/ContactMail/ChangeStatusTrue/@Model.ContactId"
                           class="btn btn-outline-primary">
                            Okundu Olarak İşaretle
                        </a>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>
