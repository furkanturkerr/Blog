@model List<Entities.Concrate.Contact>
@{
    ViewData["Title"] = "Okunmamış Mesajlar";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="page-header">
    <div class="page-block">
        <div class="row align-items-center">
            <div class="col-md-12">
                <div class="page-header-title">
                    <h5 class="m-b-10">Mesajlar</h5>
                </div>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="~/Admin/Index">Ana Sayfa</a></li>
                    <li class="breadcrumb-item"><a href="#">İletişim</a></li>
                    <li class="breadcrumb-item">Okunmamış Mesajlar</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-body">
                <div class="mb-3">
                    <a href="~/ContactMail/Unread" class="btn btn-primary">
                        Okunmamış Mesajlar
                    </a>
                    <a href="~/ContactMail/Read" class="btn btn-outline-primary">
                        Okunmuş Mesajlar
                    </a>
                </div>

                @if (Model != null && Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>GÖNDEREN</th>
                                    <th>E-POSTA</th>
                                    <th>KONU</th>
                                    <th>TARİH</th>
                                    <th>İŞLEMLER</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Select((value, index) => new { value, index }))
                                {
                                    <tr>
                                        <td>@(item.index + 1)</td>
                                        <td>@item.value.Name</td>
                                        <td>@item.value.Email</td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(item.value.Subject))
                                            {
                                                @item.value.Subject
                                            }
                                            else
                                            {
                                                <span class="text-muted">Konu Yok</span>
                                            }
                                        </td>
                                        <td>
                                            @item.value.CreatedDate.ToString("dd MMM yyyy")
                                            <br />
                                            <small class="text-muted">@item.value.CreatedDate.ToString("HH:mm")</small>
                                        </td>
                                        <td>
                                            <a href="~/ContactMail/Detail/@item.value.ContactId" 
                                               class="btn btn-info btn-sm">
                                                <i class="feather icon-eye"></i>
                                            </a>
                                            <a href="~/ContactMail/ChangeStatusTrue/@item.value.ContactId" 
                                               class="btn btn-success btn-sm">
                                                <i class="feather icon-check"></i>
                                            </a>
                                            <a href="~/ContactMail/Delete/@item.value.ContactId" 
                                               class="btn btn-danger btn-sm"
                                               onclick="return confirm('Silmek istediğinize emin misiniz?')">
                                                <i class="feather icon-trash-2"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="feather icon-inbox" style="font-size: 48px; color: #6c757d;"></i>
                        <h5 class="mt-3 text-muted">Okunmamış mesaj bulunmuyor</h5>
                        <p class="text-muted">Tüm mesajları okudunuz.</p>
                        <a href="~/ContactMail/Read" class="btn btn-primary btn-sm mt-2">
                            Okunmuş Mesajları Görüntüle
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>