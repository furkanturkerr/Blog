@model List<Entities.Concrate.Google>
@{
    ViewData["Title"] = "Hakkımda";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="page-header">
    <div class="page-block">
        <div class="page-header-title">
            <h5 class="mb-0 font-medium">Google</h5>
        </div>
        <ul class="breadcrumb">
            <li class="breadcrumb-item" aria-current="page">Analytics Etiketi</li>
        </ul>
    </div>
</div>

<table class="table table-bordered">
    <tr>
        <th>Kod</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                <div class="position-relative">
                    <pre class="bg-black text-success p-2 small" style="max-height: 200px; overflow-y: auto; border-radius: 4px;">
            <code>@item.Googletag</code>
        </pre>
                    <button type="button" class="btn btn-sm btn-outline-light position-absolute top-0 end-0 m-1" 
                            onclick="copyToClipboard('@item.Googletag')">
                        <i class="feather icon-copy"></i>
                    </button>
                </div>
            </td>
            <td><a href="~/Google/GoogleAnalyticsUpdate/@item.GoogleId" class="btn btn-outline-dark">Güncelle</a></td>
            <td><a href="~/Google/GoogleAnalyticsDelete/@item.GoogleId" class="btn btn-outline-dark">Sil</a></td>
        </tr>
    }
</table>
<br/>
<a class="btn btn-outline-dark" href="/Google/GoogleAnalyticsAdd">Yeni Ekle</a>