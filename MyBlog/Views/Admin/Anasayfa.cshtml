@model List<Entities.Concrate.Contact>

@{
  Layout = "~/Views/Admin/Index.cshtml";
}

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="~/lib/microsoft/signalr/dist/browser/signalr.js"></script>

<script type="text/ecmascript">
  $(document).ready(() => {

    var connection = new signalR.HubConnectionBuilder().withUrl("/SignalRHub")
      .build();

    $("#constatus").text(connection.state);
    connection.start().then(() => {
      $("#connstatus").text(connection.state);
      setInterval(() => {
        connection.invoke("SendStatistic");
      }, 1000);
    }).catch((err) => {console.log(err)});

    connection.on("MessageWithTrueCount", (value1) => {
      $("#message").text(value1);
    })

    connection.on("BlogCount", (value1) => {
      $("#blog").text(value1);
    })

    connection.on("ImageCount", (value1) => {
      $("#image").text(value1);
    })

    connection.on("ProjeCount", (value1) => {
      $("#proje").text(value1);
    })
  });
</script>


<div class="grid grid-cols-12 gap-x-6">
  <div class="col-span-12 xl:col-span-3 md:col-span-6">
    <div class="card">
      <div class="card-body">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-muted mb-2">Okunmamış Mesaj</p>
            <h3 class="mb-0 font-light" id="message"></h3>
          </div>
          <div class="shrink-0">
            <div class="w-14 h-14 rounded-full bg-primary-500/10 flex items-center justify-center">
              <i class="fas fa-envelope text-primary-500 text-2xl"></i>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>

  <div class="col-span-12 xl:col-span-3 md:col-span-6">
    <div class="card">
      <div class="card-body">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-muted mb-2">Yayındaki Blog Yazısı</p>
            <h3 class="mb-0 font-light" id="blog"></h3>
          </div>
          <div class="shrink-0">
            <div class="w-14 h-14 rounded-full bg-success-500/10 flex items-center justify-center">
              <i class="fas fa-file-alt text-success-500 text-2xl"></i>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>

  <div class="col-span-12 xl:col-span-3 md:col-span-6">
    <div class="card">
      <div class="card-body">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-muted mb-2">Toplam Görsel</p>
            <h3 class="mb-0 font-light" id="image"></h3>
          </div>
          <div class="shrink-0">
            <div class="w-14 h-14 rounded-full bg-warning-500/10 flex items-center justify-center">
              <i class="fas fa-image text-warning-500 text-2xl"></i>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>

  <div class="col-span-12 xl:col-span-3 md:col-span-6">
    <div class="card">
      <div class="card-body">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-muted mb-2">Yayındaki Toplam Proje</p>
            <h3 class="mb-0 font-light" id="proje"></h3>
          </div>
          <div class="shrink-0">
            <div class="w-14 h-14 rounded-full bg-danger-500/10 flex items-center justify-center">
              <i class="fas fa-briefcase text-danger-500 text-2xl"></i>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>

  
  <div class="col-span-12">
    <div class="card table-card">
      <div class="card-header flex items-center justify-between">
        <h5>Son Mesajlar</h5>
        <a href="~/ContactMail/Unread" class="btn btn-sm btn-primary">Tümünü Gör</a>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-hover">
            <thead>
            <tr>
              <th>Gönderen</th>
              <th>Konu</th>
              <th>Tarih</th>
              <th>Durum</th>
              <th>İşlemler</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
              if (item.Status == false)
              {
                <tr>
                  <td>
                    <div class="flex items-center gap-3">
                      <div>
                        <h6 class="mb-0">@item.Name</h6>
                        <p class="text-muted text-sm mb-0">@item.Email</p>
                      </div>
                    </div>
                  </td>
                  <td>
                    <h6 class="mb-0">@item.Subject</h6>
                  </td>
                  <td>
                    <h6 class="text-muted mb-0">@item.CreatedDate</h6>
                  </td>
                  <td>
                    <span class="badge bg-danger-500 text-white text-xs">Okunmadı</span>
                  </td>
                  <td>
                    <a href="~/ContactMail/Detail/@item.ContactId" class="text-primary-500 hover:text-primary-600 mx-1" title="Detay">
                      <i class="fas fa-eye"></i>
                    </a>
                    <a href="~/ContactMail/ChangeStatusTrue/@item.ContactId" class="text-success-500 hover:text-success-600 mx-1" title="Okundu İşaretle">
                      <i class="fas fa-check"></i>
                    </a>
                    <a href="~/ContactMail/Delete/@item.ContactId" class="text-danger-500 hover:text-danger-600 mx-1" title="Sil">
                      <i class="fas fa-trash"></i>
                    </a>
                  </td>
                </tr>
              }
              else
              {
                <tr class="unread">
                  <td>
                    <div class="flex items-center gap-3">
                      <div>
                        <h6 class="mb-0">@item.Name</h6>
                        <p class="text-muted text-sm mb-0">@item.Email</p>
                      </div>
                    </div>
                  </td>
                  <td>
                    <h6 class="mb-0">@item.Subject</h6>
                  </td>
                  <td>
                    <h6 class="text-muted mb-0">@item.CreatedDate</h6>
                  </td>
                  <td>
                    <span class="badge bg-primary-500 text-white text-xs">Okundu</span>
                  </td>
                  <td>
                    <a href="~/ContactMail/Detail/@item.ContactId" class="text-primary-500 hover:text-primary-600 mx-1" title="Detay">
                      <i class="fas fa-eye"></i>
                    </a>
                    <a href="~/ContactMail/ChangeStatusFalse/@item.ContactId" class="text-success-500 hover:text-success-600 mx-1" title="Okunmadı İşaretle">
                      <i class="fas fa-check"></i>
                    </a>
                    <a href="~/ContactMail/Delete/@item.ContactId" class="text-danger-500 hover:text-danger-600 mx-1" title="Sil">
                      <i class="fas fa-trash"></i>
                    </a>
                  </td>
                </tr>
              }
            }
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <!-- Hızlı İşlemler -->
  <div class="col-span-12 xl:col-span-6">
    <div class="card">
      <div class="card-header">
        <h5>Hızlı İşlemler</h5>
      </div>
      <div class="card-body">
        <div class="grid grid-cols-2 gap-4">
          <a href="~/Blog/Add" class="flex items-center gap-3 p-4 rounded-lg bg-primary-500/10 hover:bg-primary-500/20 transition-colors">
            <div class="w-12 h-12 rounded-full bg-primary-500 flex items-center justify-center text-white">
              <i class="fas fa-plus text-xl"></i>
            </div>
            <div>
              <h6 class="mb-0">Yeni Blog</h6>
              <p class="text-muted text-sm mb-0">Yazı ekle</p>
            </div>
          </a>
          <a href="~/Portfolio/Add" class="flex items-center gap-3 p-4 rounded-lg bg-success-500/10 hover:bg-success-500/20 transition-colors">
            <div class="w-12 h-12 rounded-full bg-success-500 flex items-center justify-center text-white">
              <i class="fas fa-briefcase text-xl"></i>
            </div>
            <div>
              <h6 class="mb-0">Yeni Proje</h6>
              <p class="text-muted text-sm mb-0">Proje ekle</p>
            </div>
          </a>
          <a href="~/Images/Index" class="flex items-center gap-3 p-4 rounded-lg bg-warning-500/10 hover:bg-warning-500/20 transition-colors">
            <div class="w-12 h-12 rounded-full bg-warning-500 flex items-center justify-center text-white">
              <i class="fas fa-image text-xl"></i>
            </div>
            <div>
              <h6 class="mb-0">Galeri</h6>
              <p class="text-muted text-sm mb-0">Görsel yükle</p>
            </div>
          </a>
          <a href="~/Settings/Index" class="flex items-center gap-3 p-4 rounded-lg bg-danger-500/10 hover:bg-danger-500/20 transition-colors">
            <div class="w-12 h-12 rounded-full bg-danger-500 flex items-center justify-center text-white">
              <i class="fas fa-cog text-xl"></i>
            </div>
            <div>
              <h6 class="mb-0">Ayarlar</h6>
              <p class="text-muted text-sm mb-0">Site ayarları</p>
            </div>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>