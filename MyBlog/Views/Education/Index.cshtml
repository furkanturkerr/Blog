@model System.Collections.Generic.List<Entities.Concrate.Education>

@{
    ViewData["Title"] = "Özgeçmiş - Deneyim";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mt-4 mb-4" style="margin-left: 12rem">Deneyim</h2>
<a class="btn btn-outline-success" style="margin-left: 12rem; margin-bottom: 5px;" href="/Education/Add">Deneyim Ekle</a>

<div class="container">
    @foreach (var item in Model)
    {
        <form asp-action="Index" method="post" class="mb-4 p-3 border rounded bg-white shadow-sm">
            <input type="hidden" name="EducationId" value="@item.EducationId" />
            
            <div class="mb-3">
                <label class="form-label fw-bold">Alt Başlıklar</label>
                <input type="text" name="EducationContentlow" value="@item.EducationContentlow" class="form-control" />
            </div>
            
            <div class="mb-3">
                <label class="form-label fw-bold">Tarih</label>
                <input type="text" name="EducationTime" value="@item.EducationTime" class="form-control" />
            </div>
            
            <div class="mb-3">
                <label class="form-label fw-bold">Açıklama</label>
                <input type="text" name="EducationText" value="@item.EducationText" class="form-control" />
            </div>

            <button type="submit" class="btn btn-primary">Güncelle</button>
            <a asp-controller="Skills" asp-action="Delete" asp-route-id="@item.EducationId" 
               class="btn btn-danger">Sil</a>
        </form>
    }
</div>