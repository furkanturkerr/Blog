@model UserUpdateViewModel

@{
    ViewData["Title"] = "Kullanıcı Güncelleme";
    Layout = "_Layout";
}

<div class="page-header">
    <div class="page-block">
        <div class="page-header-title">
            <h5 class="mb-0 font-medium">Kullanıcı</h5>
        </div>
        <ul class="breadcrumb">
            <li class="breadcrumb-item" aria-current="page">Kullanıcı</li>
            <li class="breadcrumb-item" aria-current="page">@Model.Name</li>
        </ul>
    </div>
</div>

<p class="text-danger">Hiçbiri boş bırakılamaz!!</p>
<br/>
<form method="post" class="form-control">
    <input type="hidden" asp-for="Id"/>
    <label>Ad</label>
    <input type="text" asp-for="Name" value="@Model.Name" class="form-control"/>
    <span asp-validation-for="Name" class="text-danger"></span>
    <br/>
    <label>Soyad</label>
    <input type="text" asp-for="Surname" value="@Model.Surname" class="form-control"/>
    <span asp-validation-for="Surname" class="text-danger"></span>
    <br/>
    <label>Kullanıcı Adı</label>
    <input type="text" asp-for="Username" value="@Model.Username" class="form-control"/>
    <span asp-validation-for="Username" class="text-danger"></span>
    <br/>
    <label>Email</label>
    <input type="text" asp-for="Mail" value="@Model.Mail" class="form-control"/>
    <span asp-validation-for="Mail" class="text-danger"></span>
    <br/>
    <button class="btn btn-outline-warning">Güncelle</button>
    <a href="~/Register/UserList" class="btn btn-outline-dark">İptal</a>
</form>