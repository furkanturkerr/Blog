@model Entities.Concrate.NavbarLeft

@{
    ViewData["Title"] = "Sol Menü";
    Layout = "_Layout";
}

<div class="page-header">
    <div class="page-block">
        <div class="page-header-title">
            <h5 class="mb-0 font-medium">Furkan Türker</h5>
        </div>
        <ul class="breadcrumb">
            <li class="breadcrumb-item" aria-current="page">Sol Menü</li>
            <li class="breadcrumb-item" aria-current="page">Sol Menü Güncelle</li>
        </ul>
    </div>
</div>

<form method="post" class="form-control">
    <input type="hidden" asp-for="NavbarLeftId"/>
    <label>Görsel Yolu</label>
    <input type="text" class="form-control" value="@Model.NavbarLeftImage" asp-for="NavbarLeftImage"/>
    @Html.ValidationMessageFor(x=> x.NavbarLeftImage)
    <br/>
    <label>İsim Soyisim</label>
    <input type="text" class="form-control" value="@Model.NavbarLefName" asp-for="NavbarLefName"/>
    @Html.ValidationMessageFor(x=> x.NavbarLefName)
    <br/>
    <label>Ünvan</label>
    <input type="text" class="form-control" value="@Model.NavbarLeftText" asp-for="NavbarLeftText"/>
    @Html.ValidationMessageFor(x=> x.NavbarLeftText)
    <br/>
    <label>E-mail</label>
    <input type="text" class="form-control" value="@Model.NavbarLeftEmail" asp-for="NavbarLeftEmail"/>
    @Html.ValidationMessageFor(x=> x.NavbarLeftEmail)
    <br/>
    <label>Telefon Numarası</label>
    <input type="text" class="form-control" value="@Model.NavbarLeftPhone" asp-for="NavbarLeftPhone"/>
    @Html.ValidationMessageFor(x=> x.NavbarLeftPhone)
    <br/>
    <label>Adres</label>
    <input type="text" class="form-control" value="@Model.NavbarLeftAddress" asp-for="NavbarLeftAddress"/>
    @Html.ValidationMessageFor(x=> x.NavbarLeftAddress)
    <br/>
    <label>Linkedin Bağlantısı</label>
    <input type="text" class="form-control" value="@Model.NavbarLeftLinkLinkedin" asp-for="NavbarLeftLinkLinkedin"/>
    @Html.ValidationMessageFor(x=> x.NavbarLeftLinkLinkedin)
    <br/>
    <label>GitHub Bağlantısı</label>
    <input type="text" class="form-control" value="@Model.NavbarLeftLinkGithub" asp-for="NavbarLeftLinkGithub"/>
    @Html.ValidationMessageFor(x=> x.NavbarLeftLinkGithub)
    <br/>
    <label>Instagram Bağlantısı</label>
    <input type="text" class="form-control" value="@Model.NavbarLeftLinkInstagram" asp-for="NavbarLeftLinkInstagram"/>
    @Html.ValidationMessageFor(x=> x.NavbarLeftLinkInstagram)
    <br/>
    <button class="btn btn-outline-warning">Güncelle</button>
</form>