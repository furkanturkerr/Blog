@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    @await Component.InvokeAsync("_GooglePartial")

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <title>Furkan Türker | Junior Full Stack Developer (.NET)</title>

    <meta name="description"
          content="Furkan Türker’in .NET ve modern web teknolojileriyle geliştirdiği projeler, blog yazıları ve yazılım portföyü." />

    <meta name="keywords"
          content="Furkan Türker, .NET Developer, Junior Full Stack Developer" />

    <meta name="author" content="Furkan Türker" />
    <link rel="canonical" href="https://furkanturker.com/" />

    <!-- Open Graph -->
    <meta property="og:title" content="Furkan Türker | Junior Full Stack Developer (.NET)" />
    <meta property="og:description" content="Modern web projeleri ve yazılım portföyü" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://furkanturker.com/" />
    <meta property="og:image" content="https://furkanturker.com/img/anasayfa-furkan-turker.webp" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Furkan Türker | Junior Full Stack Developer (.NET)" />
    <meta name="twitter:description" content="Modern web projeleri ve yazılım portföyü" />
    <meta name="twitter:image" content="https://furkanturker.com/img/anasayfa-furkan-turker.webp" />
    
    <link rel="icon" type="image/png" href="https://furkanturker.com/img/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href="https://furkanturker.com/img/favicon.svg" />
    <link rel="shortcut icon" href="https://furkanturker.com/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="https://furkanturker.com/img/apple-touch-icon.png" />
    <meta name="apple-mobile-web-app-title" content="Furkan" />
    <link rel="manifest" href="https://furkanturker.com/img/site.webmanifest" />
    
    
    <!-- Schema Person -->
    <script type="application/ld+json">
    @Html.Raw(@"{
      ""@context"": ""https://schema.org"",
      ""@type"": ""Person"",
      ""name"": ""Furkan Türker"",
      ""jobTitle"": ""Junior Full Stack Developer"",
      ""url"": ""https://furkanturker.com/"",
      ""image"": ""https://furkanturker.com/img/profil.jpeg"",
      ""sameAs"": [
        ""https://github.com/furkanturkerr"",
        ""https://www.linkedin.com/in/furkanturker/""
      ]
    }")
</script>
    <link rel="stylesheet" href="/site/style.css" />
</head>
<body>
    <main>
        @await Component.InvokeAsync("_NavbarLeftPartial")

        <div class="main-content">
            <nav class="navbar">
                <ul class="navbar-list">
                    <li class="navbar-item">
                        <a href="https://furkanturker.com/" class="navbar-link active">Hakkımda</a>
                    </li>

                    <li class="navbar-item">
                        <a href="/Ozgecmis" class="navbar-link">Özgeçmiş</a>
                    </li>

                    <li class="navbar-item">
                        <a href="/Projeler" class="navbar-link">Projeler</a>
                    </li>

                    <li class="navbar-item">
                        <a href="/Blog" class="navbar-link">Blog</a>
                    </li>

                    <li class="navbar-item">
                        <a href="/Iletisim" class="navbar-link">İletişim</a>
                    </li>
                </ul>
            </nav>
            <article class="about active" data-page="about">  
                <header>
                    <h1 class="h2 article-title">Hakkımda</h1>
                </header>

                @await Component.InvokeAsync("_AboutPartial")
                

                @await Component.InvokeAsync("_ServicePartial")

                <div class="modal-container " data-modal-container>
                    <div class="overlay " data-overlay></div>

                    <section class="testimonials-modal">
                        <button class="modal-close-btn" data-modal-close-btn><ion-icon name="close-outline"></ion-icon></button>

                        <div class="modal-img-wrapper">
                            <figure class="modal-avatar-box">
                                @*<img src="https://i.postimg.cc/zGDHfn3G/avatar-1.png" alt="Daniel Lewis" width="80" data-modal-img>*@
                            </figure>

                            @*<img src="https://i.postimg.cc/mZ00RwX7/icon-quote.png" alt="quote icon">*@
                        </div>

                        <div class="modal-content">
                            <h4 class="h3 modal-title" data-modal-title>Daniel Lewis</h4>
                            <time datetime="2023-06-14">14 June, 2023</time>

                            <div class="modal-text" data-modal-text>
                                <p>Richard was hired to create a corporate identity. It's modern, clean and with a beautiful design that got a lot of praises from colleagues and visitors. We were very pleased with the work done. He has a lot of experience and is very concerned about the needs of client.</p>
                            </div>
                        </div>
                    </section>
                </div>

                @await Component.InvokeAsync("_ExperincePartial")

            </article>
        </div>
    </main>

    @await Component.InvokeAsync("_ThemaScriptComponentPartial")
</body>
</html>