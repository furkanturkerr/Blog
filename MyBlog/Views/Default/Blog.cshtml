@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8" />
    @await Component.InvokeAsync("_GooglePartial")

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>Blog | Furkan Türker</title>

    <meta name="description"
          content=".NET, yazılım mimarisi ve web geliştirme üzerine teknik blog yazıları." />

    <link rel="canonical" href="https://furkanturker.com/blog" />

    <meta property="og:title" content="Yazılım Blogu | Furkan Türker" />
    <meta property="og:description" content="Teknik yazılar ve yazılım notları" />
    <meta property="og:image" content="https://furkanturker.com/img/blog-furkan-turker.webp" />

    <meta name="twitter:card" content="summary_large_image" />

    <link rel="icon" type="image/png" href="https://furkanturker.com/img/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href="https://furkanturker.com/img/favicon.svg" />
    <link rel="shortcut icon" href="https://furkanturker.com/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="https://furkanturker.com/img/apple-touch-icon.png" />
    <meta name="apple-mobile-web-app-title" content="Furkan" />
    <link rel="manifest" href="https://furkanturker.com/img/site.webmanifest" />

    <link rel="stylesheet" href="~/site/style.css" />
</head>


<body>
<main>
    @await Component.InvokeAsync("_NavbarLeftPartial")

    <div class="main-content">
        <nav class="navbar">
            <ul class="navbar-list">
                <li class="navbar-item">
                    <a href="https://furkanturker.com/" class="navbar-link">Hakkımda</a>
                </li>

                <li class="navbar-item">
                    <a href="/Ozgecmis" class="navbar-link">Özgeçmiş</a>
                </li>

                <li class="navbar-item">
                    <a href="/Projeler" class="navbar-link">Projeler</a>
                </li>

                <li class="navbar-item">
                    <a href="/Blog" class="navbar-link active">Blog</a>
                </li>

                <li class="navbar-item">
                    <a href="/Iletisim" class="navbar-link">İletişim</a>
                </li>
            </ul>
        </nav>
         <article class="blog active" data-page="blog">
                @await Component.InvokeAsync("_BlogCategoryComponentPartial")
                @await Component.InvokeAsync("_BlogPagePartial")
            </article>
    </div>
</main>

@await Component.InvokeAsync("_ThemaScriptComponentPartial")


<script>
document.addEventListener('DOMContentLoaded', function() {
    const filterBtns = document.querySelectorAll('[data-filter-btn]');
    const selectItems = document.querySelectorAll('[data-select-item]');
    const blogItems = document.querySelectorAll('.blog-post-item');
    const select = document.querySelector('[data-select]');
    const selectValue = document.querySelector('[data-select-value]');
    const selectBox = document.querySelector('.filter-select-box');

    // Dropdown aç/kapa
    if(select) {
        select.addEventListener('click', function(e) {
            e.preventDefault();
            selectBox.classList.toggle('active');
            console.log('Dropdown clicked', selectBox.classList);
        });
    }

    function filterBlogs(category) {
        blogItems.forEach(item => {
            const itemCategory = item.getAttribute('data-category');
            
            if (category === 'all' || itemCategory === category) {
                item.style.display = '';
            } else {
                item.style.display = 'none';
            }
        });
    }

    // Üst butonlar için
    filterBtns.forEach(btn => {
        btn.addEventListener('click', function() {
            filterBtns.forEach(b => b.classList.remove('active'));
            this.classList.add('active');
            const category = this.getAttribute('data-category');
            filterBlogs(category);
        });
    });

    // Mobil select için
    selectItems.forEach(item => {
        item.addEventListener('click', function(e) {
            e.preventDefault();
            const category = this.getAttribute('data-category');
            const categoryText = this.textContent.trim();
            
            selectValue.textContent = categoryText;
            selectBox.classList.remove('active');
            filterBlogs(category);
        });
    });
});
</script>
</body>
</html>