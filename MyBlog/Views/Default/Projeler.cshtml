    <link rel="canonical" href="https://furkanturker.com/projeler" />

    <meta property="og:title" content="Projelerim | Furkan Türker" />
    <meta property="og:description" content=".NET ve Web tabanlı yazılım projeleri" />
    <meta property="og:image" content="https://furkanturker.com/img/og-projects.webp" />

    <meta name="twitter:card" content="summary_large_image" />

    <link rel="icon" href="/img/turker.webp" />
    <link rel="stylesheet" href="/site/style.css" />
