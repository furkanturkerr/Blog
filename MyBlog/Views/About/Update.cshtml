@model  Entities.Concrate.About
@{
    Layout = "_Layout";
}

<div class="page-header">
    <div class="page-block">
        <div class="page-header-title">
            <h5 class="mb-0 font-medium">Anasayfa</h5>
        </div>
        <ul class="breadcrumb">
            <li class="breadcrumb-item" aria-current="page">Hakkımda</li>
            <li class="breadcrumb-item" aria-current="page">Güncelle</li>
        </ul>
    </div>
</div>

<form method="post" class="form-control">
    <input type="hidden" asp-for="AboutId" />
    <label>Hakkımda</label>
    <textarea name="AboutContent" class="form-control" rows="14">@Model.AboutContent</textarea>
    <span asp-validation-for="AboutContent" class="text-danger"></span>
    <br/>
    <button class="btn btn-outline-warning">Güncelle</button>
</form>