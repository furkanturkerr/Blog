@model System.Collections.Generic.List<Entities.Concrate.Service>

@{
    ViewData["Title"] = "Servisler";
    Layout = "_Layout";
}

<div class="page-header">
    <div class="page-block">
        <div class="page-header-title">
            <h5 class="mb-0 font-medium">Anasayfa</h5>
        </div>
        <ul class="breadcrumb">
            <li class="breadcrumb-item" aria-current="page">Servisler</li>
        </ul>
    </div>
</div>

<table class="table table-bordered">
    <tr>
        <th>Başlık</th>
        <th>Metin</th>
        <th>İcon Yolu</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ServiceContent</td>
            <td>@item.ServiceText</td>
            <td>@item.ServiceIcon</td>
            <td><a href="~/Service/Update/@item.ServiceId" class="btn btn-outline-dark">Güncelle</a></td>
        </tr>
    }
</table>