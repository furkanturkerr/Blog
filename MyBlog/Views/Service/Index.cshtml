@model System.Collections.Generic.List<Entities.Concrate.Service>

@{
    ViewData["Title"] = "Servisler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mt-4 mb-4" style="margin-left: 12rem">Servisler</h2>

<div class="container">
    @foreach (var item in Model)
    {
        <form asp-action="Index" method="post" class="mb-4 p-3 border rounded bg-white shadow-sm">
            <input type="hidden" name="ServiceId" value="@item.ServiceId" />

            <div class="mb-3">
                <label class="form-label fw-bold">Başlık</label>
                <input type="text" name="ServiceContent" value="@item.ServiceContent" class="form-control" />
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Açıklama</label>
                <input type="text" name="ServiceText" value="@item.ServiceText" class="form-control" />
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Icon</label>
                <input type="text" name="ServiceIcon" value="@item.ServiceIcon" class="form-control" />
            </div>

            <button type="submit" class="btn btn-primary">Güncelle</button>
        </form>
    }
</div>