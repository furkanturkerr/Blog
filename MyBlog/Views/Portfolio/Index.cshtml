@model System.Collections.Generic.List<Entities.Concrate.Portfolio>

@{
    ViewData["Title"] = "Özgeçmiş - Deneyim";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mt-4 mb-4" style="margin-left: 12rem">Projeler</h2>
<a class="btn btn-outline-success" style="margin-left: 12rem; margin-bottom: 5px;" href="/Portfolio/Add">Proje Ekle</a>

<div class="container">
    @foreach (var item in Model)
    {
        <form asp-action="Index" asp-controller="Portfolio" method="post" enctype="multipart/form-data"
              class="mb-4 p-3 border rounded bg-white shadow-sm">

            <input type="hidden" name="PortfolioId" value="@item.PortfolioId" />

            <div class="mb-3">
                <label class="form-label fw-bold">Kategori İsmi</label>
                <input type="text" name="PortfolioCategory" value="@item.PortfolioCategory" class="form-control" />
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Proje Resmi (dosya seçebilirsiniz)</label>
                <input type="file" name="PortfolioImageFile" class="form-control" />
                @if (!string.IsNullOrEmpty(item.PortfolioImage))
                {
                    <div class="mt-2">
                        <img src="@item.PortfolioImage" alt="Proje Resmi" width="150" class="border rounded" />
                    </div>
                }
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Proje Resim Linki (opsiyonel)</label>
                <input type="text" name="PortfolioImage" value="@item.PortfolioImage" class="form-control" />
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Proje İsmi</label>
                <input type="text" name="PortfolioName" value="@item.PortfolioName" class="form-control" />
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Proje Linki</label>
                <input type="text" name="PortfolioLink" value="@item.PortfolioLink" class="form-control" />
            </div>

            <button type="submit" class="btn btn-primary">Güncelle</button>
            <a asp-controller="Portfolio" asp-action="Delete" asp-route-id="@item.PortfolioId"
               class="btn btn-danger">Sil</a>
        </form>
    }
</div>
