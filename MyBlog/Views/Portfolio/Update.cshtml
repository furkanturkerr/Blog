@model Dto.Portfolio.UpdatePortfolioDto

@{
    ViewData["Title"] = "Projelerim";
    Layout = "_Layout";
}

@if (Model == null)
{
    <p>Portfolio bulunamadı</p>
    return;
}

<div class="page-header">
    <div class="page-block">
        <div class="page-header-title">
            <h5 class="mb-0 font-medium">Projeler</h5>
        </div>
        <ul class="breadcrumb">
            <li class="breadcrumb-item" aria-current="page">Proje Güncelle</li>
        </ul>
    </div>
</div>

<form method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="PortfolioId"/>
    <input type="hidden" asp-for="PortfolioImagePath"/>

    <label>Mevcut Görsel</label>
    <br/>
    @if (!string.IsNullOrEmpty(Model.PortfolioImagePath))
    {
        <img src="@Model.PortfolioImagePath" width="200" height="100" alt="Portfolio Image"/>
    }
    else
    {
        <p class="text-muted">Görsel yok</p>
    }
    <br/>

    <label>Yeni Görsel Yükle (opsiyonel)</label>
    <input type="file" asp-for="PortfolioImage" class="form-control"/>
    @Html.ValidationMessageFor(x => x.PortfolioImage)
    <br/>
    <label>Proje Adı</label>
    <input type="text" value="@Model.PortfolioName" asp-for="PortfolioName" class="form-control"/>
    @Html.ValidationMessageFor(x => x.PortfolioName)
    <br/>
    <label>Kategori</label>
    <input type="text" value="@Model.PortfolioCategory" asp-for="PortfolioCategory" class="form-control"/>
    @Html.ValidationMessageFor(x => x.PortfolioCategory)
    <br/>
    <label>Proje Linki</label>
    <input type="text" value="@Model.PortfolioLink" asp-for="PortfolioLink" class="form-control"/>
    @Html.ValidationMessageFor(x => x.PortfolioLink)
    <br/>
    <button class="btn btn-outline-warning">Kaydet</button>
</form>