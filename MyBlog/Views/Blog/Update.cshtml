@model Entities.Concrate.Blog

@{
    ViewBag.Title = "Blog Yazısı Güncelle";
    Layout = "~/Views/Admin/Index.cshtml";
}
<style>
    .page-header {
        width: 100%;
        overflow: hidden; 
    }

    .page-left {
        float: left;
    }

    .page-right {
        float: right;
    }

    .page-left h5 {
        margin: 0 0 4px 0;
    }

    .page-left ul {
        margin: 0;
        padding: 0;
        list-style: none;
    }
</style>


<div class="container-fluid">
    <form method="post">
       <input type="hidden" asp-for="BlogId"/>
        <div class="page-header">
            <div class="page-left">
                <h5>Anasayfa</h5>
                <ul>
                    <li>Blog Yazısı Ekle</li>
                </ul>
            </div>

            <div class="page-right">
                <button class="btn btn-outline-dark" type="submit">Güncelle</button>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-9">
                <div class="card shadow-sm mb-4">
                    <div class="card-body p-4">
                        <input type="text"
                               asp-for="BlogTitle"
                               class="form-control form-control-lg mb-3"
                               placeholder="Başlık ekle..." />

                        <textarea id="editor"
                                  asp-for="BlogText"
                                  rows="80"></textarea>
                    </div>
                </div>
            </div>

            <div class="col-lg-3">
                <div class="card shadow-sm mb-3">
                    <div class="card-body">
                        <label class="fw-semibold mb-1">Kategori</label>
                        <select
                            asp-for="CategoryId"
                            asp-items="ViewBag.Categories"
                            class="form-control">
                            <option value="">Kategori Seçiniz</option>
                        </select>
                    </div>
                </div>

                <div class="card shadow-sm mb-3">
                    <div class="card-body">
                        <label class="fw-semibold mb-1">Görsel URL</label>
                        <input type="text"
                               asp-for="BlogImage"
                               class="form-control"
                               placeholder="https://..." />
                    </div>
                </div>

                <div class="card shadow-sm mb-3">
                    <div class="card-body">
                        <label class="fw-semibold mb-1">Slug</label>
                        <input type="text"
                               asp-for="BlogSlug"
                               class="form-control"
                               placeholder="yazi-kisa-adi" />
                    </div>
                </div>
            </div>
        </div>

    </form>
</div>

<script src="https://cdn.ckeditor.com/4.22.1/full/ckeditor.js"></script>
<script>
    CKEDITOR.replace('editor', {
        height: 1200,
        removeButtons: 'About',
        enterMode: CKEDITOR.ENTER_P,
        shiftEnterMode: CKEDITOR.ENTER_BR
    });
</script>
