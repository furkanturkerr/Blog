@model LoginViewModel
@{
ViewData["Title"] = "Giriş";
Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Giriş ‹ Site — WordPress</title>

    <style>
     

        html,body{ height:100%; }
        
        body.login.wp-core-ui{
            background: #f0f0f1;
            color: #3c434a;
            font: 400 14px / 1.5 -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", sans-serif;
            display: flex;
            align-items: flex-start;
            justify-content: center;
            width: 500px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .login{
            width:100%;
            max-width:360px;
            margin:8vh auto 4vh;
            padding:0 24px;
            box-sizing:border-box;
        }

        #login h1{ text-align:center; margin:0 0 24px; }
        #login h1 a{ display:inline-block; width:84px; height:84px; text-decoration:none; }
        .wp-logo{ width:84px; height:84px; display:block; }

        .login form{
            background:#ffffff;              /* var(--wp-input-bg) yerine */
            border:1px solid #c3c4c7;        /* var(--wp-border) yerine */
            box-shadow:0 1px 3px rgba(0,0,0,.04);
            padding:26px 24px 24px;
            margin:0 0 16px;
            border-radius:4px;
        }
        .login form h2{
            margin:0 0 18px;
            font-size:18px;
            font-weight:600;
            text-align:center;
            color:#1d2327;
        }

        .login form p{ margin:0 0 14px; }
        .login label{ font-size:14px; display:block; margin:0 0 4px; }

        .login .input,
        .login input[type="text"],
        .login input[type="email"],
        .login input[type="password"]{
            width:100%;
            padding:8px 10px;
            font-size:14px;
            line-height:1.4;
            color:#3c434a;                   /* var(--wp-text) yerine */
            background:#ffffff;              /* var(--wp-input-bg) yerine */
            border:1px solid #c3c4c7;        /* var(--wp-border) yerine */
            border-radius:3px;
            box-sizing:border-box;
        }
        .login .input:focus{
            outline:2px solid transparent;
            border-color:#2271b1;            /* var(--wp-blue) yerine */
            box-shadow:0 0 0 1px #2271b1;    /* var(--wp-blue) yerine */
            background:#ffffff;
        }

        .forgetmenot{
            display:flex;
            align-items:center;
            gap:8px;
            margin:8px 0 0;
        }
        .forgetmenot label{ margin:0; font-size:13px; }

        /* Birincil buton */
        .button-primary{
            width:100%;
            display:inline-block;
            text-align:center;
            background:#2271b1;              /* var(--wp-blue) yerine */
            color:#fff;
            border:1px solid #2271b1;        /* var(--wp-blue) yerine */
            border-radius:3px;
            padding:6px 12px;
            line-height:28px;
            height:40px;
            font-weight:600;
            cursor:pointer;
            transition:background .15s ease,border-color .15s ease,transform .02s ease;
        }
        .button-primary:hover{
            background:#1d5f95;              /* var(--wp-blue-700) yerine */
            border-color:#1d5f95;            /* var(--wp-blue-700) yerine */
        }
        .button-primary:active{ transform:translateY(1px); }

        /* Uyarılar / validasyon */
        .notice, .message{
            background:#f6f7f7;
            border:1px solid #c3c4c7;
            padding:12px 14px;
            margin:0 0 16px;
            border-radius:3px;
            font-size:13px;
        }
        .alert-success{ background:#edf7ed; border-color:#b7dfb9; color:#135e14; }
        .text-danger{ color:#b32d2e; font-size:13px; }
        .validation-summary-errors ul{ margin:0 0 0 18px; }

        /* Alt linkler */
        #nav, #backtoblog{ text-align:center; margin:12px 0 0; font-size:13px; }
        #nav a, #backtoblog a{ color:#2271b1; text-decoration:none; } /* var(--wp-blue) yerine */
        #nav a:hover, #backtoblog a:hover{ text-decoration:underline; }

         
    </style>
</head>
<body class="login wp-core-ui">
<div id="login" class="login">


    @if (TempData["Success"] != null)
    {
    <div class="notice alert-success">@TempData["Success"]</div>
    }

    <div asp-validation-summary="All" class="validation-summary-errors text-danger"></div>

    <form asp-action="Index" method="post" novalidate>
        @Html.AntiForgeryToken()
        <h2>Giriş Yap</h2>

        <p>
            <label for="user_login">E-posta adresi</label>
            <input asp-for="Email" type="email" class="input" id="user_login" autocomplete="username" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </p>

        <p>
            <label for="user_pass">Parola</label>
            <input asp-for="Password" type="password" class="input" id="user_pass" autocomplete="current-password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </p>

        <p class="forgetmenot">
            <input asp-for="RememberMe" type="checkbox" id="rememberme" />
            <label for="rememberme">Beni hatırla</label>
        </p>

        <p class="submit">
            <button type="submit" class="button-primary">Giriş Yap</button>
        </p>
    </form>

    <p id="nav">
        <a href="@Url.Action("ForgotPassword","Account")">Şifrenizi mi unuttunuz?</a>
    </p>
    <p id="backtoblog">
        <a href="/">← Siteye geri dön</a>
    </p>
</div>
</body>
</html>
